<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lbl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/check_status"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:onClick="check"
        android:text="check_status"
        app:layout_constraintEnd_toStartOf="@+id/con"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sts" />

    <Button
        android:id="@+id/con"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:onClick="connect"
        android:text="Connect to Borne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/check_status"
        app:layout_constraintTop_toBottomOf="@+id/sts" />

    <TextView
        android:id="@+id/sts"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="50dp"
        android:text="Status"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>